<dl class="portlet topiclistportlet" tal:define="brains python: view.topics()" tal:condition="python: view.roles() == True">
     <dt class="portletHeader" tal:content="python:  view.contents().portlet_title"></dt>
     <dd class="portletItem">
	  <table class="listing">
	       <tr>
		    <td>ID</td>
		    <td>Title</td>
		    <td>Officer</td>
		    <td>State</td>
	       </tr>
	       <tr tal:repeat="brain brains">
		    <td tal:content="python: brain.getId"></td>
		    <td><a tal:attributes="href python: brain.getPath()" tal:content="python: brain.Title"></a></td>
		    <td tal:content="python: brain._unrestrictedGetObject().officer"></td>
		    <td tal:content="python: view.review_state(brain.review_state).title()"></td>
	       </tr>
	  <table>	
     </dd>
</dl>


<script type="text/javascript">
     function showml(divId,inhtmText) 
     {  
        var x = document.getElementById(divId).style.display; 

        if(x=="block")
        {
          document.getElementById(divId).style.display = "none";
          document.getElementById(inhtmText).innerHTML="Show More...";
        }
       if(x=="none")
       {
          document.getElementById(divId).style.display = "block";
          document.getElementById(inhtmText).innerHTML="Show Less";
        }
     }
</script>

