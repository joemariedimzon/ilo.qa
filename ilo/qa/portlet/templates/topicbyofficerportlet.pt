<div tal:condition="python: context.portal_type == 'ilo.qa.qafacility'">
  <dl class="portlet" tal:define="url view/context/request/URL; brains python: view.officers_contents()['data']; general_officer python: view.officers_contents()['general_officer']" tal:condition="python: '/view' in url or '/bytopic_view' in url">
    <dt class="portletHeader" tal:content="python:  view.contents().portlet_title"></dt>

<!-- General Officer -->
    <dd class="portletItem" tal:condition="general_officer">
      <ul class="tbo-listing">
		<li class="tbo-heading">
		  <div class='tbo-left'>
			<h4>General Officer</h4>
			<span>Email: </span>
			<span tal:content="python: general_officer[0]['officer_email']"/>
		  </div>
		  <div class="tbo-right">
			<img width='100%' alt='' tal:attributes="src python: view.officer_photo(general_officer[0]['officer_email'])"/>
		  </div>
		  <div style="display: block;clear: both"></div>
		</li>
		
		<li class="portletItem" tal:repeat="brain general_officer">
		  <ul>
			<li>
			  <a tal:attributes="href python: context.absolute_url()+ '/bytopic_view?topic1=' +brain['id']" tal:content="python: brain['title']" />
			</li>
		  </ul>
		</li>
      <ul>
    </dd>
<!-- Officers -->
    <dd class="portletItem" tal:repeat="brain brains" tal:condition="brains">
      <ul class="tbo-listing">
        <li class="tbo-heading">
		  <div class='tbo-left'>
			<h4 tal:content="python:brain['name'].title()"/>
			<span>Email: </span>
			<span tal:content="python:brain['officer_email']" />
		  </div>
		  <div class="tbo-right">
			<img width='100%' alt='' tal:attributes="src python: view.officer_photo(brain['officer_email'])"/>
		  </div>
		  <div style="display: block;clear: both"></div>
        </li>
		<li>
		  <ul>
			<li tal:repeat="data python:brain['data']">
			  <a tal:attributes="href python: context.absolute_url()+ '/bytopic_view?topic1=' +data['id']" tal:content="python: data['title']" />
			</li>
		  </ul>
        </li>
      </ul>
    </dd>
    <dd class="portletItem" tal:condition="python: not view.officers_contents()['data']">
      <div data-alert class="alert-box info text-center">
      No Officers Yet.
      </div>
      <a class="button expand" tal:attributes="href python: context.absolute_url() + '/++add++ilo.qa.topic'"><i class="fa fa-plus"></i> Add Officer</a >
    </dd>
    <dd class="portletItem">
     <a class="button expand" tal:attributes="href python: context.absolute_url()+'/searchbytopic_view'"><i class="fa fa-search"></i> Search By Topic</a></dd>
     <dd class="portletItem"><a class="button expand" tal:attributes="href python: context.absolute_url()+'/qa_facility_browserview'"><i class="fa fa-eye"></i> View Recent Questions</a></dd>
<dd class="portletItem"><a class="button expand" tal:attributes="href python: context.absolute_url()+'/unanswered_questions_view'"><i class="fa fa-eye"></i> View Unanswered Questions</a></dd>
  </dl>
</div>

